apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ include "kanban.fullname" . }}
  labels:
    app: {{ include "kanban.fullname" . }}
spec:
  replicas: {{ .Values.replicaCount }}
  selector:
    matchLabels:
      app: {{ include "kanban.fullname" . }}
  template:
    metadata:
      labels:
        app: {{ include "kanban.fullname" . }}
    spec:
      containers:
        - name: kanban
          image: "{{ .Values.image.repository }}:{{ .Values.image.tag }}"
          imagePullPolicy: {{ .Values.image.pullPolicy }}
          envFrom:
            - configMapRef:
                name: {{ include "kanban.fullname" . }}-env
          ports:
            - name: http
              containerPort: {{ .Values.service.port }}
          readinessProbe:
            httpGet:
              path: /health
              port: http
            initialDelaySeconds: 10
            periodSeconds: 15
          resources: {{- toYaml .Values.resources | nindent 12 }}
